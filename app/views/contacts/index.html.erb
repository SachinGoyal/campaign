<%#= render 'shared/import' %>


<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Contact list</h2></div><!-- title_left -->
      <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
          <div class="advance-search"><i class="fa fa-dot-circle-o"></i></div>
          <div class="custom-add"><%= link_to new_contact_path do %><i class="fa fa-plus"></i><% end %></div>
        </div>
        <%#= render 'shared/keyword_search', :condition => :name_cont %>
      </div><!--title_right -->
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Profile -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1" id='select-all'><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:first_name) %></div>
    <div class="col-md-2">Last Name</div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:email) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% @contacts.each do |contact| %>
    <div class="row td">
      <div class="col-md-1"><input name="" type="checkbox" value=<%= contact.id %> ></div>
      <div class="col-md-2"><%= contact.last_name %></div>
      <div class="col-md-2"><%= contact.email %></div>
      <div class="col-md-1"><%= contact.status ? 'Enabled' : 'Disabled' %></div>
      <div class="col-md-2"><%= format_date(contact, :created_at) %></div>
      <div class="col-md-1 text-right"><a href="#" class="anchor-block"><i class="fa fa-ellipsis-v"></i></a></div>
    </div>

     <%= render 'shared/inline_action_link', element: contact %>

  <% end %>
  <%= render 'shared/bootam_action_link'%>
  <%#= will_paginate @profiles %>
</div>