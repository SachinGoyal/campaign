

<div class="row">
  <div class="col-xs-3">  
      <div class="title_left"><h2><%= t('frontend.shared.list', :model_name => pick_model_from_locale(:contact)) %></h2></div><!-- title_left -->
  </div>

  <div class="col-xs-9 form-group pull-right top_search">
  <div class="row">
   
    <div class="col-xs-4">
      <%= render 'shared/import' %>
    </div>
    <div class="col-xs-8">        
      <% if can? :search, Contact %>       
        <%= render 'shared/keyword_search', :condition => :email_cont %>
         
        <div class="advance-search">
          <%= link_to search_contacts_path, :title => t('frontend.shared.advance_search') do %>
            <i class="fa fa-dot-circle-o"></i>
          <% end %>
        </div> 
      <% end %>
      
      <% if can? :create, Contact %>
        <div class="custom-add"><%= link_to new_contact_path, :title => t('frontend.shared.new', :model_name => pick_model_from_locale(:contact)) do %><i class="fa fa-plus"></i><% end %></div>
      <% end %> 

    </div>
  </div>
</div>

     
<div class="clearfix"></div>                
</div><!-- page-title -->
</div><!--row-->
<div id="results">
  <%= render :partial => "results", :locals => {:contacts => @contacts} %>
</div>

<%= render 'shared/bootam_action_link', element: Contact %>
<%= will_paginate @contacts , renderer: BootstrapPagination::Rails%>
