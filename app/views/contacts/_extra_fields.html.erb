<%= fields_for :extra_fields do %>
	<% extra_fields.each do |field|%>
        <div class="form-group form-group-sm">
			<%= label_tag :field_name,field.field_name,class: "col-sm-4 col-xs-12 control-label"%>	
			<div class="col-sm-8 col-xs-12">
			  <%= text_field_tag "contact[extra_fields][#{field.field_name}]",'',class: 'form-control'%>
			</div>
		</div>
	<% end %>
<% end %>
