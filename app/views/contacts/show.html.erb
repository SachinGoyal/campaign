  <div class="row">
    <div class="page-title">
      <div class="title_left"><h2>View Contact</h2></div><!-- title_left -->

      <div class="clearfix"></div>



    </div><!-- page-title -->
  </div><!--row-->

  <div class="custom-container">
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-5 col-xs-10">
          <form class="form-horizontal">

 
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Name</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @contact.name%>
              </div>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Email</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @contact.email%>
              </div>
            </div>


            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Status</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= display_status(@contact) %>
              </div>
            </div>

            <% unless @contact.profiles.empty? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Profile</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @contact.profiles.collect(&:name).uniq.map(&:capitalize).join(', ')%>
                </div>
              </div>
            <% end %>

            <% unless @contact.interest_areas.empty? %>            
              <div class="form-group form-group-sm">
                <label class="col-xs-4 text-right control-label" for="formGroupInputSmall">Area of interest</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%=  @contact.interest_areas.collect(&:name).uniq.map(&:capitalize).join(', ') %> </div>
                  <div class="clearfix"></div> 
                </div>
            <% end %>

            <% unless @contact.country.blank? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Country</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @contact.country_name.titleize %>
                </div>
              </div>
            <% end %>

            <% unless @contact.city.blank? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">City</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @contact.city.titleize %>
                </div>
              </div>
            <% end %>

            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Gender</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @contact.gender ? "Male" : "Female" %>
              </div>
            </div>
            </form>

          </div>
          <div class="col-lg-4 col-xs-1">
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">&nbsp;</label>
              <div class="col-sm-8 col-xs-12 custom-radio-input">&nbsp;</div>
            </div>


          </div>
          <div class="clearfix"></div>
          <div class="divider"></div>
        </div>

      </div><!-- row -->
    </div><!--  custom-container -->
<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>
