  <div class="row">
    <div class="page-title">
      <div class="title_left"><h2><%=t 'frontend.shared.view', model_name: pick_model_from_locale(:contact) %></h2></div>
      <div class="clearfix"></div>



    </div><!-- page-title -->
  </div><!--row-->

  <div class="custom-container">
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-5 col-xs-10">
          <form class="form-horizontal">

 
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" ><%= t('activerecord.attributes.contact.first_name') %></label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @contact.name%>
              </div>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" ><%= t('activerecord.attributes.contact.email') %></label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @contact.email%>
              </div>
            </div>


            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" ><%= t('activerecord.attributes.contact.status') %></label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= display_status(@contact) %>
              </div>
            </div>

            <% unless @contact.profile.present? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" ><%= t('activerecord.attributes.contact.profile_id') %></label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @contact.profile.try(:name) %>
                </div>
              </div>
            <% end %>
            </form>

          </div>
          <div class="col-lg-4 col-xs-1">
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" >&nbsp;</label>
              <div class="col-sm-8 col-xs-12 custom-radio-input">&nbsp;</div>
            </div>


          </div>
          <div class="clearfix"></div>
          <div class="divider"></div>
        </div>

      </div><!-- row -->
    </div><!--  custom-container -->
<% if can? :update, Contact %>    
  <%= link_to t('buttons.edit'), edit_contact_path(@contact) %> |
<% end %>
<%= link_to t('buttons.back'), contacts_path %>
