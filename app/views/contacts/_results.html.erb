<%- model_class = Contact -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1"><input name="" id='select-all' type="checkbox" value=""></div>
    <div class="col-md-2"><%= sort_link(@q, :first_name, "Name") %></div>
    <div class="col-md-2"><%= sort_link(@q, :email) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:profile_id) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:city) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:country) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-2">Date</div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% if @contacts.present? %>
    <div id="contact">
      <% @contacts.each do |c| %>
        <%= render :partial => 'contacts/contact', :locals => {:contact => c} %>
      <% end %>
    </div>
  <%else%>
    <h2 class='text-center'><em>No Record Found</em></h2>  
  <% end %>
</div>

