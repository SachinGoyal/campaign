<!DOCTYPE html>
<html lang="en">

<head>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= content_for?(:title) ? yield(:title) : "Sperant" %></title>
    
    <%#= stylesheet_link_tag "https//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,300,600"%>

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>  
      
    <!--[if lt IE 9]>
        <script src="../assets/js/ie8-responsive-file-warning.js"></script>
        <![endif]-->

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><span><%= Setting.first.site_title.titleize%></span></a>
                    </div>
                    <div class="clearfix"></div>
                    
                    <!-- menu prile quick info -->
                    <div class="profile">
                        <% if user_signed_in? %>
                          <div class="profile_pic">  
                            <%= image_tag current_user.image.url(:small), :class => "img-circle profile_img" %>
                          </div>
                        <% end %>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2><%= current_user.username %></h2>
                        </div>
                    </div>
                   <!-- /menu prile quick info -->
                    

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>&nbsp; </h3>
                            <ul class="nav side-menu">
                                <% if can? :read, Campaign %>
                                  <li class="<%= "current-page" if params[:controller] == "campaigns" %>"><%= link_to campaigns_path do %>
                                     <i class="fa fa-bullhorn"></i>
                                    <span>Campaign</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Newsletter %>
                                  <li class="<%= "current-page" if params[:controller] == "newsletters" %>"><%= link_to newsletters_path do %>
                                     <i class="fa fa-newspaper-o"></i>
                                    <span>Newsletter</span>
                                  <% end %></li>
                                <% end %>
                                
                                <% if can? :read, Template %>
                                  <li class="<%= "current-page" if params[:controller] == "templates" %>"><%= link_to templates_path do %>
                                     <i class="fa fa-clone"></i>
                                    <span>Templates</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Profile %>
                                  <li class="<%= "current-page" if params[:controller] == "profiles" %>">
                                  <%= link_to profiles_path do %>
                                     <i class="fa fa-users"></i>
                                    <span>Profile</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Contact %>
                                  <li class="<%= "current-page" if params[:controller] == "contacts" %>"><%= link_to contacts_path do %>
                                     <i class="fa fa-tty"></i>
                                    <span>Contacts</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Role %>
                                  <li class="<%= "current-page" if params[:controller] == "roles" %>"><%= link_to roles_path do %>
                                     <i class="fa fa-key"></i>
                                    <span>Roles</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Attribute %>
                                  <li class="<%= "current-page" if params[:controller] == "attributes" %>"><%= link_to attributes_path do %>
                                     <i class="fa fa-attributes"></i>
                                    <span>Attributes</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, Company %>
                                  <li class="<%= "current-page" if params[:controller] == "companies" %>"><%= link_to companies_path do %>
                                     <i class="fa fa-building-o"></i>
                                    <span>Companies</span>
                                  <% end %></li>
                                <% end %>

                                <% if can? :read, User %>
                                  <li class="<%= "current-page" if params[:controller] == "users" %>"><%= link_to users_path do %>
                                     <i class="fa fa-user"></i>
                                    <span>Users</span>
                                  <% end %></li>
                                <% end %>
                                  <li><%= link_to '#' do %>
                                     <i class="fa fa-line-chart"></i>
                                    <span>Stats</span>
                                  <% end %></li>
                                  <li><%= link_to reports_campaigns_path do %>
                                     <i class="fa fa-pie-chart"></i>
                                    <span>Reports</span>
                                  <% end %></li>

                                  <li><%= link_to setting_path(Setting.first) do %>
                                     <i class="fa fa-cog"></i>
                                    <span>Settings</span>
                                  <% end %></li>
                            </ul>
                        </div>
                     </div>
                    <!-- /sidebar menu -->
                  </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                          <li class="">
                            <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                              <%= image_tag current_user.image.url(:thumb) %><%= current_user.username%>
                              <span class=" fa fa-angle-down"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-usermenu animated fadeInDown pull-right">
                              <li>
                                <%= link_to edit_user_registration_path  do %>
                                  <i class="badge bg-red pull-right"></i>
                                  <span>Edit Profile</span>
                               <% end %>
                              </li>
                              <li>
                                <%= link_to destroy_user_session_path, :method => :delete  do %>
                                  <i class="fa fa-sign-out pull-right"></i>
                                  <span>Log Out</span>
                               <% end %>
                              </li>
                            </ul>
                          </li>                          
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
              <div class='default-top-spacing'>
                <div class="display_flash">
                  <% flash.each do |key, value| %>
                    <%= content_tag :div, value, class: "flash alert-#{key} alert" %>
                  <% end %>
                </div>
                <%= yield %>
                <%= render 'layouts/footer'%> <!-- /footer section -->
              </div>
            </div>
            <!-- /page content -->
            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            </div>
        </div>
    </div>
    </body>

</html>
