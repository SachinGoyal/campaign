<div class="row">
  <div class="page-title">
    <div class="title_left"><h2><%=t 'frontend.shared.list', model_name: pick_model_from_locale(:campaign) %></h2></div><!-- title_left -->
      <div class="title_right">

      <div class="col-md-9 col-sm-12 col-xs-12 form-group pull-right top_search">
          <% if can? :search, Campaign %>
            <%= render 'shared/keyword_search', :condition => :name_cont %>
            <div class="advance-search">
              <%= link_to search_campaigns_path, :title => t('frontend.shared.advance_search') do %>
              <i class="fa fa-dot-circle-o"></i>
              <% end %>
            </div> 
          <% end %>
          <% if can? :create, Campaign %>
            <div class="custom-add"><%= link_to new_campaign_path, :title => t("frontend.shared.new", :model_name => pick_model_from_locale(:campaign)) do %><i class="fa fa-plus"></i><% end %></div>
          <% end %>

      </div>

    </div>
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->
<%= render 'results'%>
<%= will_paginate @campaigns , renderer: BootstrapPagination::Rails %>