<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Campaign list</h2></div><!-- title_left -->

    <div class="title_right">

      <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
       
          <%= render 'shared/keyword_search', :condition => :name_cont %>
       
        <div class="advance-search"><i class="fa fa-dot-circle-o"></i></div>
        <div class="custom-add"><%= link_to new_campaign_path do %><i class="fa fa-plus"></i><% end %></div>

      </div>

    </div>
    <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


  <%- model_class = Campaign -%>
  <div class="custom-table">
    <div class="row th">
      <div class="col-md-2" id='select-all'><input name="" type="checkbox" value=""></div>
      <div class="col-md-3"><%= model_class.human_attribute_name(:name) %></div>
      <div class="col-md-3"><%= model_class.human_attribute_name(:status) %></div>
      <div class="col-md-3"><%= model_class.human_attribute_name(:created_at) %></div>
      <div class="col-md-1">&nbsp;</div>
    </div><!-- row -->

    <% @campaigns.each do |campaign| %>
    <div class="row td">
      <div class="col-md-2"><input name="" type="checkbox" value=<%=campaign.id%> ></div>
      <div class="col-md-3"><%= campaign.name %>&nbsp;</div>
      <div class="col-md-3"><%= display_status(campaign) %>&nbsp;</div>
      <div class="col-md-3"><%= format_date(campaign, :created_at) %>&nbsp;</div>
      <div class="col-md-1 pull-right text-right"><a href="#" class="anchor-block"><i class="fa fa-ellipsis-v"></i></a></div>
    </div>
  <%= render 'shared/inline_action_link', element: campaign %>
  <% end %>
  <%= render 'shared/bootam_action_link'%>
  <%= will_paginate @campaigns, renderer: BootstrapPagination::Rails %>
</div>






















