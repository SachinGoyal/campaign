 <%- model_class = Campaign -%>
  <div class="custom-table" data-bottom-url='/campaigns/edit_all'>
    <div class="row th">
      <div class="col-md-2"><input name="" id='select-all' type="checkbox" value=""></div>
      <div class="col-md-3"><%=sort_link(@q, :name)%></div>
      <div class="col-md-3"><%=sort_link(@q, :status)%></div>
      <div class="col-md-3"><%=sort_link(@q, :created_at, 'Date')%></div>
      <div class="col-md-1">&nbsp;</div>
    </div><!-- row -->
    <% if @campaigns.present? %>
    <div id="campaign">
      <%= render @campaigns %>
    </div>
    <%else%>
      <h2 class='text-center'><em><%= t('frontend.shared.no_record') %></em></h2>  
    <% end %>
  <%= render 'shared/bootam_action_link', element: Campaign %>
  <%= will_paginate @campaigns, renderer: BootstrapPagination::Rails %>
</div>
