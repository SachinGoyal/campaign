<div class="custom-container">
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-6 col-xs-10">
          <%= form_for @campaign, :html => { :class => "form-horizontal campaign" } do |f| %>            
            
            <div class="field form-group form-group-sm">
              <%=f.label :name,:class=>"col-sm-4 col-xs-12 control-label"  %>
              <div class="col-sm-8 col-xs-12"> <%= f.text_field :name, :class => 'form-control', :maxlength => 150 %> </div>
            </div>      
            
            <div class="field form-group form-group-sm">
             <%= f.label :description, :class=> "col-sm-4 col-xs-12 control-label" %>
              <div class="col-sm-8 col-xs-12"> <%= f.text_area :description, :class => 'form-control' %> </div>
            </div>          

            <div class="form-group form-group-sm field">
              <%= f.label :status, class: "col-sm-4 col-xs-12 control-label" %>
               <div class="col-sm-8 col-xs-12 radio_status">
                <%= f.radio_button :status ,1, :checked => @campaign.new_record? ? true : @campaign.status ,:id=>"radio01" %>
                <label for="radio01" class = "status_spacer"><span></span><%= t('frontend.shared.enabled') %></label>
                <%= f.radio_button :status ,0, :checked => @campaign.new_record? ? false : !@campaign.status ,:id=>"radio02" %>
                <label for="radio01"><span></span><%= t('frontend.shared.disabled')%></label>
              </div>
           </div>

            <div class="col-md-12 col-xs-12">
              <div class="col-lg-2 col-xs-1"> </div>
              <div class="col-md-6 col-xs-10">
                <div class="form-group custom-from-group">
                  <%= f.submit t('buttons.save'), :class => 'btn dark-btn-custom' %>
                  <%= link_to t('links.cancel'), campaigns_path,:class => 'btn custom-link-btn' %>
                </div>
              </div>
              <div class="col-lg-4 col-xs-1"> </div>
              <div class="clearfix"></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 