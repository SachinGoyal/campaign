<div class="custom-container">
  <div class="row">
    <div class="col-md-12 col-xs-12">
      <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-6 col-xs-10">
          <%= form_for @campaign, :html => { :class => "form-horizontal campaign" } do |f| %>            
            <div class="field form-group form-group-sm">
              <%= f.label :name, :class => "col-sm-3 col-xs-12 control-label" %>
              <div class="col-sm-9 col-xs-12"> <%= f.text_field :name, :class => 'form-control' %> </div>
            </div>      
            <div class="field form-group form-group-sm">
              <%= f.label :description, :class => "col-sm-3 col-xs-12 control-label" %>
              <div class="col-sm-9 col-xs-12"> <%= f.text_field :description, :class => 'form-control' %> </div>
            </div>          
            <div class="form-group form-group-sm field">
              <%= f.label :status, :class => "col-sm-3 col-xs-12 control-label" %>
              <div class="col-sm-9 col-xs-12">
                <%= label :status, "Enabled" %>
                <%= f.radio_button :status, true , :checked => @campaign.new_record? ? true : @campaign.status , :value => true %>
                <%= label :status, "Disabled" %>
                <%= f.radio_button :status, false , :checked => @campaign.new_record? ? false : @campaign.status , :value => false %>
              </div>
            </div>

            <div class="col-md-12 col-xs-12">
              <div class="col-lg-2 col-xs-1"> </div>
              <div class="col-md-6 col-xs-10">
                <div class="form-group custom-from-group">
                  <%= f.submit :Save ,:class => 'btn dark-btn-custom' %>
                </div>
              </div>
              <div class="col-lg-4 col-xs-1"> </div>
              <div class="clearfix"></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>  











