<%= form_for [current_user ,@campaign], :html => { :class => "form-horizontal campaign" } do |f| %>

  <% if @campaign.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag :user_id, current_user.id.to_i %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= label :status, "Enabled" %>
      <%= f.radio_button :status, true , :checked => @campaign.new_record? ? true : @campaign.status , :value => true %>
      <%= label :status, "Disabled" %>
      <%= f.radio_button :status, false , :checked => @campaign.new_record? ? false : @campaign.status , :value => false %>

    </div>
    <%= f.error_span(:status) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_campaigns_path(current_user), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
