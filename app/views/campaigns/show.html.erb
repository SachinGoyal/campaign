  <div class="row">
    <div class="page-title">
      <div class="title_left"><h2>View Campaign</h2></div><!-- title_left -->
      <div class="clearfix"></div>
    </div><!-- page-title -->
  </div><!--row-->

  <div class="custom-container">
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-5 col-xs-10">
          <form class="form-horizontal">
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Name</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @campaign.name%>
              </div>
            </div>

            <% if @campaign.description.present? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Description</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @campaign.description %>
                </div>
              </div>
            <% end %>

            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Status</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= display_status(@campaign) %>
              </div>
            </div>
          </form>

          </div>
          <div class="col-lg-4 col-xs-1">
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">&nbsp;</label>
              <div class="col-sm-8 col-xs-12 custom-radio-input">&nbsp;</div>
            </div>

          </div>
          <div class="clearfix"></div>
          <div class="divider"></div>
        </div>

      </div><!-- row -->
    </div><!--  custom-container -->

    <% if can? :update, Campaign %>
     <%= link_to 'Edit', edit_campaign_path(@campaign) %> |
    <% end %>
    <%= link_to 'Back', campaigns_path %>