<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Newsletter list</h2></div><!-- title_left -->
      <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
          <div class="advance-search"><i class="fa fa-dot-circle-o"></i></div>
          <div class="custom-add"><%= link_to new_newsletter_path do %><i class="fa fa-plus"></i><% end %></div>
        </div>
        <%= render 'shared/keyword_search', :condition => :name_cont %>
      </div><!--title_right -->
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Newsletter -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1" id='select-all'><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:name) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:campaign) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:template) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:subject) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% @newsletters.each do |newsletter| %>
    <div class="row td">
      <div class="col-md-1"><input name="" type="checkbox" value=<%=newsletter.id %> ></div>
      <div class="col-md-2"><%= newsletter.name %>&nbsp;</div>
      <div class="col-md-2"><%= newsletter.campaign.try(:name) %>&nbsp;</div>
      <div class="col-md-2"><%= newsletter.template.try(:name) %>&nbsp;</div>
      <div class="col-md-2"><%= newsletter.subject %>&nbsp;</div>
      <div class="col-md-2"><%= format_date(newsletter, :created_at) %>&nbsp;</div>
      <div class="col-md-1 text-right"><a href="#" class="anchor-block"><i class="fa fa-ellipsis-v"></i></a></div>
    </div>

     <%= render 'shared/inline_action_link', element: newsletter %>

  <% end %>
  <%= render 'shared/bootam_action_link'%>
  <%#= will_paginate @attributes %>
</div>






















