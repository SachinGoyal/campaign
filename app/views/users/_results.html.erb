<% model_class = User %>
<div class="custom-table" data-bottom-url='/users/edit_all'>
  <div class="row th">
    <div class="col-md-1">
      <% if can?(:update , User) or can?(:delete , User) %>
        <input name="" id='select-all' type="checkbox" value="">
      <% end %>
      </div>
    <div class="col-md-3"><%=sort_link(@q, :username) %></div>
    <div class="col-md-3"><%=sort_link(@q, :status) %></div>
    <div class="col-md-4"><%=sort_link(@q, :created_at,"Date") %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% if @users.present? %>
    <div id="user">
      <%= render @users %>
    </div>
  <%else%>
    <h2 class='text-center'><em>No Record Found</em></h2>  
  <% end %>

</div>