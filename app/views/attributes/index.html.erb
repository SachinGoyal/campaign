<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Attributes list</h2></div><!-- title_left -->
      <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
          <div class="advance-search"><i class="fa fa-dot-circle-o"></i></div>
          <div class="custom-add"><i class="fa fa-plus"></i></div>
        </div>
        <%= render 'shared/keyword_search', :condition => :name_cont %>
      </div><!--title_right -->
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Attribute -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1"><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:name) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-2"><%= t '.actions', :default => t("helpers.actions") %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% @attributes.each do |attribute| %>
    <div class="row td">
      <div class="col-md-1"><input name="" type="checkbox" value=""></div>
      <div class="col-md-2"><%= attribute.name %></div>
      <div class="col-md-2"><%= attribute.status ? 'Enabled' : 'Disabled' %></div>
      <div class="col-md-2"><%= format_date(attribute, :created_at) %></div>
      <div class="col-md-2">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attribute_path(attribute), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attribute,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        <%= link_to attribute.status ? 'Disable' : 'Enable',
                      attribute_path(attribute, :attribute => {:status => !attribute.status?}),
                      :method => :put,
                      :class => 'btn btn-default btn-xs' %>                                
      </div>
    </div>
  <% end %>
  <%#= will_paginate @attributes %>
</div>