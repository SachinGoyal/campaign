  <div class="row">
    <div class="page-title">
      <div class="title_left"><h2>Company</h2></div><!-- title_left -->

      <div class="clearfix"></div>



    </div><!-- page-title -->
  </div><!--row-->

  <div class="custom-container">
    <div class="row">
      <div class="col-md-12 col-xs-12">
        <div class="col-lg-2 col-xs-1">&nbsp;</div>
        <div class="col-md-5 col-xs-10">
          <form class="form-horizontal">


            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Company Name</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= @company.name%>
              </div>
            </div>

            <% if @company.free_emails.present? %>            
              <div class="form-group form-group-sm">
                <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">No of free Emails</label>
                <div class="col-sm-8 col-xs-12 default-without-input">
                  <%= @company.free_emails%>
                </div>
              </div>
            <% end %>

            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">Status</label>
              <div class="col-sm-8 col-xs-12 default-without-input">
                <%= display_status(@company) %>
              </div>
            </div>


            </form>

          </div>
          <div class="col-lg-4 col-xs-1">
            <div class="form-group form-group-sm">
              <label class="col-sm-4 col-xs-12 control-label" for="formGroupInputSmall">&nbsp;</label>
              <div class="col-sm-8 col-xs-12 custom-radio-input">&nbsp;</div>
            </div>


          </div>
          <div class="clearfix"></div>
          <div class="divider"></div>
        </div>

      </div><!-- row -->
    </div><!--  custom-container -->












