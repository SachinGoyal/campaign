<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Company List</h2></div><!-- title_left -->
      <div class="title_right">

      <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
       
          <%= render 'shared/keyword_search', :condition => :name_cont %>
        <div class="custom-add"><%= link_to new_company_path do %><i class="fa fa-plus"></i><% end %></div>

      </div>

    </div>
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Company -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1" id='select-all'><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:name) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:subdomain) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:free_emails) %></div>
    <div class="col-md-1"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% unless @companies.empty? %>
    <% @companies.each do |company| %>
      <div class="row td">
        <div class="col-md-1"><input name="" type="checkbox" value=<%=company.id%> ></div>
        <div class="col-md-2"><%= company.name %>&nbsp;</div>
        <div class="col-md-1"><%= company.subdomain %>&nbsp;</div>
        <div class="col-md-1"><%= company.free_emails %>&nbsp;</div>
        <div class="col-md-1"><%= display_status(company) %>&nbsp;</div>
        <div class="col-md-2"><%= format_date(company, :created_at) %>&nbsp;</div>
        <div class="col-md-1 text-right"><a href="#" class="anchor-block"><i class="fa fa-ellipsis-v"></i></a></div>
      </div>
      <%= render 'shared/inline_action_link', element: company %>
  <% end %>
  <% else %>
      <h2 class='text-center'><em>No Record Found</em></h2>  
  <% end %>
  <%= render 'shared/bootam_action_link'%>
  <%= will_paginate @companies , renderer: BootstrapPagination::Rails %>
</div>













