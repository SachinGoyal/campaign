<% if @user %>
	<%= collection_select(:user, :role_id, @roles, :id, :name, {:selected => @user.try(:role_id), :prompt => 'Please select a role'}, {:class => 'form-control dynamic_company_roles'}) %>
<% else %>
	<%= collection_select(:user, :role_id, @roles, :id, :name,{ :prompt => 'Please select a role'}, {:class => 'form-control dynamic_company_roles'}) %>
<% end %>