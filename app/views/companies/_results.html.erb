<%- model_class = Company -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1 check"><input name="select-all"  id='select-all' type="checkbox" value=""></div>
    <div class="col-md-2"><%= sort_link(@q, :name, "Company Name") %></div>
    <!-- <div class="col-md-2"><%#= sort_link(@q, :subdomain) %></div> -->
    <div class="col-md-3"><%= sort_link(@q, :free_emails, "Per Month Emails") %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-3">Date</div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% if @companies.present? %>
    <div id="company records">
      <%= render @companies %>
    </div>
  <%else%>
    <h2 class='text-center'><em>No Record Found</em></h2>  
  <% end %>
  <%= render 'shared/bootam_action_link', element: Company %>
</div>

