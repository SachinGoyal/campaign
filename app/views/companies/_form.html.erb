<%= form_for @company, :html => { :class => "form-horizontal company" } do |f| %>

  <% if @company.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :free_emails, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :free_emails, :class => 'form-control' %>
    </div>
    <%=f.error_span(:free_emails) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :created_by, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :created_by, :class => 'form-control' %>
    </div>
    <%=f.error_span(:created_by) %>
  </div>
  <div class="form-group">
    <%= f.label :updated_by, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :updated_by, :class => 'form-control' %>
    </div>
    <%=f.error_span(:updated_by) %>
  </div>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
