<div class="row selected-row selected-row-inline">
  <div class="col-md-12 selected-td white_text">
    <ul>
      <!-- <li><i class="fa fa-line-chart"></i> Edit</li> -->
      <% if element.is_a?(User) and element == current_user %>
      <% else %>
        <% if can? :update, element    %>
          <li><%= link_to [:edit , element] do %>
            <i class="fa fa-pencil"></i>
            <span>Edit</span>
            <% end %>
          </li>
        <% end %>
      <% end %>
      <li><%= link_to element do %>
        <i class="fa fa-eye"></i>
        <span>View</span>
        <% end %>
      </li>
      <li class="custom-delete">
        <% if can? :destroy, element    %>
          <% if element.is_a?(User) and element == current_user %>
          <% elsif element.is_a?(Company) %>
            <%= link_to element, method: :delete, data: { confirm: 'Are you sure this company? It will delete associated admin and other data.' } do %>
              <i class="fa fa-plus"></i>
              <span>Delete</span>
            <% end %>
          <% else %>
            <%= link_to element, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-plus"></i>
              <span>Delete</span>
            <% end %>
          <% end %>
        <% end %>  
      </li>
    </ul>
  </div>
</div>