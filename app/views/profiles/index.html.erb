<%#= render 'shared/import' %>

<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Profile list</h2></div><!-- title_left -->
    <div class="title_right">
      <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
        <% if can? :read, Profile %>
          <%= render 'shared/keyword_search', :condition => :name_cont %>
        <% end %>
        <% if can? :create, Profile %>
          <div class="custom-add"><%= link_to new_profile_path, :title => "New Profile" do %><i class="fa fa-plus"></i><% end %></div>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Profile -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-2" id='select-all'><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:name) %></div>
    <div class="col-md-2">No. of Contacts</div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-2">&nbsp;</div>
  </div><!-- row -->
  <% if @profiles.present? %>
    <div id="profile">
      <%= render @profiles %>
    </div>
  <%else%>
    <h2 class='text-center'><em>No Record Found</em></h2>  
  <% end %>
  <%= render 'shared/bootam_action_link', element: Profile %>
  <%= will_paginate @profiles , renderer: BootstrapPagination::Rails%>
</div>