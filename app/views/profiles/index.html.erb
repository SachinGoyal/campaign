<%= render 'shared/import' %>


<div class="row">
  <div class="page-title">
    <div class="title_left"><h2>Profiles list</h2></div><!-- title_left -->
      <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
          <div class="advance-search"><i class="fa fa-dot-circle-o"></i></div>
          <div class="custom-add"><%= link_to new_profile_path do %><i class="fa fa-plus"></i><% end %></div>
        </div>
        <%= render 'shared/keyword_search', :condition => :name_cont %>
      </div><!--title_right -->
      <div class="clearfix"></div>                
  </div><!-- page-title -->
</div><!--row-->


<%- model_class = Profile -%>
<div class="custom-table">
  <div class="row th">
    <div class="col-md-1"><input name="" type="checkbox" value=""></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:name) %></div>
    <div class="col-md-2">No. of Contacts</div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:status) %></div>
    <div class="col-md-2"><%= model_class.human_attribute_name(:created_at) %></div>
    <div class="col-md-2"><%= t '.actions', :default => t("helpers.actions") %></div>
    <div class="col-md-1">&nbsp;</div>
  </div><!-- row -->

  <% @profiles.each do |profile| %>
    <div class="row td">
      <div class="col-md-1"><input name="" type="checkbox" value=""></div>
      <div class="col-md-2"><%= profile.name %></div>
      <div class="col-md-2"><%= profile.contacts.count %></div>
      <div class="col-md-2"><%= profile.status ? 'Enabled' : 'Disabled' %></div>
      <div class="col-md-2"><%= format_date(profile, :created_at) %></div>
      <div class="col-md-2">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        <%= link_to profile.status ? 'Disable' : 'Enable',
                      profile_path(profile, :profile => {:status => !profile.status?}),
                      :method => :put,
                      :class => 'btn btn-default btn-xs' %>                                
      </div>
    </div>
  <% end %>
  <%= will_paginate @profiles %>
</div>