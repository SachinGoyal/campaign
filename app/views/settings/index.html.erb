<h1><%= t('frontend.shared.list', :model_name => 'Role') %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Site title</th>
      <th>Admin email</th>
      <th>Admin footer content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.user %></td>
        <td><%= setting.site_title %></td>
        <td><%= setting.admin_email %></td>
        <td><%= setting.admin_footer_content %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to t('buttons.edit'), edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

